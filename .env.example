# Database Configuration Template
# 请重新创建.env文件进行下方环境的配置

POSTGRES_USER=sportsx
POSTGRES_PASSWORD=your-db-password  # 请替换为生产的数据库密钥
POSTGRES_DB=sportsx
POSTGRES_HOST=db

# Database
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:5432/${POSTGRES_DB}

# Redis
REDIS_URL=redis://redis:6379/0

# Python
PYTHONPATH=/app

# Security
SECRET_KEY=YOUR_SECRET_KEY_HERE  # 请替换为生产环境中的强密钥

# Token
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7天